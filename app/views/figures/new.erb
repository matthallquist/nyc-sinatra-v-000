<h1>Create a new figure here</h1>

<form action="/figures" method="post">
  Name:
    <input type="text" id="figure_name" name="figure[name]"><br><br>
  Landmarks:
    <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <% end %><br><br>
  Titles:
    <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
    <% end %><br><br>
  New Landmark:
    <input type="text" id="new_landmark" name="landmark[name]"><br><br>
  New Title:
    <input type="text" id="new_title" name="title[name]"><br><br>
  <input type="submit" name="submit" value="Create New Figure">
</form>
